<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="wrap_content"
        android:background="@drawable/meteor1">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/activity_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp">
            <TextView
                android:id="@+id/txvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:layout_alignParentTop="true"/>
            <ImageView
                android:id="@+id/imgKey"
                android:layout_width="200dp"
                android:layout_height="255dp"
                android:src="@drawable/keyicon1"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txvAbout"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/txvKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgKey"
                android:textColor="#FFFFFF"
                android:text="Coded By KeyLo99"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="monospace"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                android:background="#8012436a"/>
            <RelativeLayout
                android:id="@+id/rlContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txvKey"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/imgKeyTHT"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/turkhackteam" />
                <ImageView
                    android:id="@+id/imgKeyTw"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/twitter"
                    android:layout_toEndOf="@+id/imgKeyTHT"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:id="@+id/imgKeyYt"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/youtube"
                    android:layout_toEndOf="@+id/imgKeyTw"
                    android:layout_marginStart="10dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/txvKeyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="keylo99official@gmail.com"
                android:layout_marginTop="5dp"
                android:fontFamily="monospace"
                android:typeface="sans"
                android:textSize="15sp"
                android:layout_below="@+id/rlContact"/>
            <TextView
                android:id="@+id/txvTHT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="|TurkHackTeam.org|"
                android:layout_marginTop="5dp"
                android:fontFamily="monospace"
                android:typeface="sans"
                android:textSize="14sp"
                android:layout_below="@+id/txvKeyEmail"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>